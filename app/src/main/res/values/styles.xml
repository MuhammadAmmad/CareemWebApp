<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonAppTheme" parent="Theme.AppCompat.Light">
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="MyAppTheme" parent="CommonAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/ViaActionBar</item>
        <item name="android:actionBarStyle">@style/ViaActionBar</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ToolBarTheme" parent="MyAppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ViaActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/action_bar_bg</item>
        <item name="android:background">@color/action_bar_bg</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="logo">@mipmap/ic_logo</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FormField" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CustomDialogThemeFloating" parent="CustomDialogThemeFixed">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomDialogThemeFixed" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- custom dialog -->
    <style name="CustomDialogButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_dialog_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/proposal_button_text_size</item>
    </style>

    <style name="CustomDialogText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/favorites_address_color</item>
        <item name="android:textSize">@dimen/proposal_button_text_size</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
