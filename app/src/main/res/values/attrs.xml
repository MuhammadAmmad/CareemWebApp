<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CheckableImageView">
        <attr name="checked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FavoriteItem">
        <attr name="address" format="string"/>
        <attr name="name" format="string"/>
        <attr name="status" format="enum">
            <enum name="unspecified" value="0"/>
            <enum name="specified" value="1"/>
        </attr>
        <attr name="type" format="enum">
            <enum name="custom" value="0"/>
            <enum name="work" value="1"/>
            <enum name="home" value="2"/>

        </attr>
    </declare-styleable>

    <declare-styleable name="CustomFontView">
        <attr name="customFont" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TextViewDrawableSize">
        <attr name="compoundDrawableWidth" format="dimension"/>
        <attr name="compoundDrawableHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
        <!-- Defines the height to fit. -->
        <attr name="heightToFitValue" format="float" />
        <!-- Defines the typeface. -->
        <attr name="customTypeface" format="string" />
    </declare-styleable>

    <declare-styleable name="DottedView">
        <attr name="bg_color" format="color" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CirclesView">
        <attr name="dotsColor" format="color" />
        <attr name="dotsDashGap" format="dimension" />
        <attr name="dotsRadius" format="dimension" />
        <attr name="dotsOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AddressTextViewDefault">
        <attr name="default_address" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomRatingBar">
        <attr name="rideSupplier" format="enum">
            <enum name="via" value="0" />
            <enum name="shared_taxi" value="1" />
            <enum name="arriva" value="2" />
        </attr>
        <attr name="hideEmptyStars" format="boolean" />
        <attr name="initialRate" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomLinkerBar">
        <attr name="questionTxt" format="string" />
        <attr name="answerTxt" format="string" />
    </declare-styleable>

</resources>